<% provide(:title, "小説の新規作成") %>
  <div class="container2">
    <nav id="nav2">
      <%= link_to "#{@user.name}さんのホーム", mypage_user_articles_path(@user) %>
    </nav>
  </div>
  <div class="dummy">
  </div>
</header>
<div class="writer_article_new_main">
  <h1>小説の新規作成</h1>
  <%= form_with model: @article, url: create_mypage_user_article_path, local: true do |form| %>
    <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:</h2>
      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
    <p>
      小説のタイトル<br>
      <%= form.text_field :title %>
    </p>
    <p>小説のジャンル</p>
    <% @categories.each do |category| %>
      <%= form.radio_button :category, category %><%= form.label category %>
    <% end%>
    <p>
      あらすじ<br>
      <%= form.text_area :text %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>
  <%= link_to '作者ホームへ戻る', mypage_user_articles_path(@user) %>
</div>
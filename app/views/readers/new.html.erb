<% provide(:title, "読者新規作成") %>
<h1>Sign up</h1>

<%= form_for(@reader) do |f| %>
<% if @reader.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@reader.errors.count, "error") %>.
    </div>
    <ul>
    <% @reader.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
  <p><%= f.label :name %> <%= f.text_field :name %></p>

  <p><%= f.label :email %> <%= f.email_field :email %></p>

  <p><%= f.label :password %> <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation, "Confirmation" %> <%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "Create my account", class: "btn btn-primary" %></p>
<% end %>

<%= link_to 'ホームに戻る', root_path %>
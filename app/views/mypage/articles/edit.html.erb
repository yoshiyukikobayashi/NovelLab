<% provide(:title, "#{@article.title}の編集") %>
  <div class="container2">
    <nav id="nav2">
      <%= link_to "#{@user.name}さんのホーム", mypage_user_articles_path(@user) %>/<%= link_to @article.title, mypage_user_article_path(@user, @article) %>
    </nav>
  </div>
  <div class="dummy">
  </div>
</header>
<div class="writer_article_edit_main">
  <h1>小説の編集</h1>
  <%= form_with model: @article, url: update_mypage_user_article_path, local: true do |form| %>
    <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:</h2>
      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
    <p>
      小説のタイトル<br>
      <%= form.text_field :title %>
    </p>
    <p>小説のジャンル</p>
    <% @categories.each do |category| %>
      <%= form.radio_button :category, category %><%= form.label category %>
    <% end%>
    <p>
      あらすじ<br>
      <%= form.text_area :text %>
    </p>
    <p>
      <br>
      <%= form.radio_button :status, false %>連載中　<%= form.radio_button :status, true %>完結済み
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>
  <%= link_to '小説のタイトルに戻る', mypage_user_article_path %>
</div>
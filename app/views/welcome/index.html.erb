    <td><%= link_to content1["article"].title, user_article_path(content1["user"], content1["article"]) %></td>
    <td><%= content1["article"].category %></td>
    <td><%= link_to content1["user"].name, user_path(content1["user"]) %></td>
  </tr>
<% end %>
</table>


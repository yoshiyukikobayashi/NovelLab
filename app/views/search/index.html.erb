<% provide(:title, "小説検索ページ") %>
  <div class="dummy2">
  </div>
</header>
  <div class="search_main">
    <h1>検索</h1>
    <%= form_tag(search_path,:method => 'get') do %>
      キーワード：<%= text_field_tag :search %><br>
      ジャンル：<%= select :category, :name, @categories, :include_blank => true %><br>
      <%= submit_tag 'Search', :name => nil %>
    <% end %>
    <%= @articlecountself%>/<%= @articlecountall%>
    <% @contents.each do |content| %>
    <div class="lists">
      <div class="left">
        <p class="comptitle"><%= link_to content["article"].title, user_article_path(content["user"], content["article"]) %></p>
        <p class="compcategory">
          <%= content["article"].category %>/
          <% if content["article"].status %>
          完結済み
          <% else %>
          連載中
          <% end %>
        </p>
        <p class="compname">by <%= link_to content["user"].name, user_path(content["user"]) %></p>
      </div>
      <div class="right">
        <p class="compabst"><%= content["article"].text %></p>
      </div>
    </div>
    <% end %>
  </div>